@model IEnumerable<InternalsApplication.Models.Department>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dept_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dept_Name)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dept_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dept_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Dept_No }) |
            @Html.ActionLink("Details", "Details", new { id = item.Dept_No }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Dept_No })
        </td>
    </tr>
}

</table>
